{
    "$schema": "https://openapi.vercel.sh/vercel.json",
    "buildCommand": "pnpm build",
    "installCommand": "pnpm install",
    "framework": "nextjs",
    "crons": [
        {
            "path": "/api/etl/sync",
            "schedule": "0 */1 * * *"
        }
    ],
    "env": {
        "NEXT_PUBLIC_APP_NAME": "Congreso Vivo",
        "NEXT_PUBLIC_APP_URL": "https://congreso-vivo.vercel.app"
    },
    "headers": [
        {
            "source": "/api/(.*)",
            "headers": [
                {
                    "key": "Cache-Control",
                    "value": "s-maxage=1800, stale-while-revalidate"
                }
            ]
        }
    ]
}